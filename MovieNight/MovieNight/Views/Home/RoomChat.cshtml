
@model MovieNight.Models.ModelView.RoomChatModelView

<div class=" text-white row">
    <div class="col-6">
        <ul ></ul>
        <input type="text" id="videom" />
        <input type="button" id="videob" value="Send Message" />
        <div id="video"></div>
    </div>
</div>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">

    <!-- Page header end -->
    <!-- Content wrapper start -->
    <div class="content-wrapper">

        <!-- Row start -->
        <div class="row gutters">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="card m-0">

                    <!-- Row start -->
                    <div class="row no-gutters">
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-3 col-3">
                            <div class="users-container">
 
                                <ul class="users">
                                    
                                    <li class="person" data-chat="person4">
                                        <p class="name-time">
                                            <span class="name">Lisa Guerrero</span>
                                        </p>
                                    </li>
                                    <li class="person" data-chat="person5">
                                        <p class="name-time">
                                            <span class="name">Michael Jordan</span>
                                            <span class="time">05/02/2019</span>
                                        </p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-9 col-9">
                            <div class="selected-user">
                                <span>To: <span class="name">Emily Russell</span></span>
                            </div>
                            <div class="chat-container">

                                <ul class="chat-box chatContainerScroll" id="messagesList"></ul>

                                <div class="form-group mt-3 mb-0">
                                    <textarea class="form-control" id="messageInput" rows="3" placeholder="Type your message here..."></textarea>
                                    <input type="button" id="sendButton"  value="Send Message" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row end -->
                </div>

            </div>

        </div>
        <!-- Row end -->

    </div>
    <!-- Content wrapper end -->

</div>

<script>
    var room = '@Html.Raw(Model.Id)';
</script>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>